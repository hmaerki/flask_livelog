{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Lint",
            "type": "python",
            "request": "launch",
            "module": "pylint",
            "cwd": "${workspaceFolder}",
            "args": [
                "--rcfile=${workspaceFolder}/.pylintrc",
                "app",
                "flask_livelog",
                "examples_pytest"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Black",
            "type": "python",
            "request": "launch",
            "module": "black",
            "cwd": "${workspaceFolder}",
            "args": [
                "--config",
                "${workspaceFolder}/.blackconfig.yaml",
                "app/*.py",
                "flask_livelog/*.py",
                "examples_pytest/*.py"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "console": "integratedTerminal",
            "env": {
                "FLASK_RUN_PORT": "5000",
                "FLASK_RUN_HOST": "0.0.0.0",
                "FLASK_APP": "app/webapp.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "justMyCode": true,
            "jinja": true
        },
    ]
}